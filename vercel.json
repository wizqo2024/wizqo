
{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/hobby-plans",
      "methods": ["GET", "POST", "DELETE", "OPTIONS"],
      "dest": "/api/hobby-plans.js"
    },
    {
      "src": "/api/generate-plan",
      "methods": ["POST", "OPTIONS"],
      "dest": "/api/generate-plan.js"
    },
    {
      "src": "/api/health",
      "methods": ["GET", "OPTIONS"],
      "dest": "/api/health.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
